                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />



                <ImageView
                    android:id="@+id/westLeft"
                    android:layout_width="100dp"
                    android:layout_height="15dp"
                    android:onClick="westLeft"
                    android:src="@drawable/greenone" />

                <ImageView
                    android:id="@+id/westStriaght"
                    android:layout_width="100dp"
                    android:onClick="westStriaght"
                    android:layout_height="15dp"
                    android:src="@drawable/greenone" />

                <ImageView
                    android:onClick="westRight"
                    android:id="@+id/westRight"
                    android:layout_width="100dp"
                    android:layout_height="15dp"
                    android:src="@drawable/greenone" />

                <ImageView
                    android:onClick="westOther"
                    android:id="@+id/westOther"
                    android:layout_width="100dp"
                    android:layout_height="15dp"
                    android:src="@drawable/greenone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:onClick="eastOther"
