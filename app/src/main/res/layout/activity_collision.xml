                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:orientation="horizontal">

                <ImageView
                    android:onClick="northOther"
                    android:id="@+id/northOther"
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:src="@drawable/greenone" />

                <ImageView
                    android:onClick="northRight"
