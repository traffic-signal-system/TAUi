<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <EditText android:id="@+id/lvs_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
         />
    <TextView android:id="@+id/lvs_scheduleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1"
        android:layout_margin="15px"
        android:textSize="30dp" />
    <TextView android:id="@+id/lvs_eventId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1"
        android:layout_margin="15px"
        android:textSize="30dp" />
    <LinearLayout android:orientation="horizontal"
        android:layout_width="wrap_content"

        android:layout_margin="5px"
        android:layout_height="wrap_content">


        <TextView android:id="@+id/lvs_beginHour"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="15px"
            android:layout_marginBottom="15px"
            android:textSize="30dp"
            android:text="12"/>
        <TextView android:id="@+id/lvs_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:layout_marginBottom="15px"
            android:textSize="30dp"
            android:text=":"/>
        <TextView android:id="@+id/lvs_beginMinute"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15px"
            android:layout_marginTop="15px"
            android:layout_marginBottom="15px"
            android:textSize="30dp"
            android:text="00"
            />
    </LinearLayout>

    <TextView android:id="@+id/lvs_controlMode"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_margin="15px"
        android:text="1"
        />
    <TextView android:id="@+id/lvs_timePatternId"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_margin="15px"
        android:textSize="30dp"
        android:text="1"
/>



</LinearLayout>